<div class="row">
  <div class="col-sm-6">

    <ol>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class='uneaten'>
            {{this.burger_name}}

          </li>
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour it!</button>
          </form>
        {{/unless}}
      {{/each}}
    </ol>


  </div>
  <div class="col-sm-6">
    <ol>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class='eaten'>
            {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ol>

  </div>

</div>

<div class="col-sm-offset-5">

  <form class="create-update-form" action="/" method="POST" id="submit">
    <div class="form-group">
      <input type="text" id="ca" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>
